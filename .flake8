[flake8]
max-line-length = 99

extend-ignore =
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D107,
    D200,
    D202,
    D205,
    D400,
    D401,
    I100,
    I201,
    E203,
    W503,

# Ignore generated / external dirs
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    .mypy_cache,
    .pytest_cache,
    data_cache,
    notebooks,

# Tests get relaxed rules (assert style, magic numbers, unused vars)
per-file-ignores =
    tests/*.py: S101, D, DAR, RST, F401, F841

# Optional import-order plugin:
# import-order-style = google
# application-import-names = phrasely
